{
  "name": "PlmAttrGroups",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "attrGroupDispName": {
      "type": "string",
      "required": true
    },
    "attrGroupIntName": {
      "type": "string",
      "required": true
    },
    "attrGroupBehaviour": {
      "type": "string",
      "required": true,
      "enum": [
        "Single Row",
        "Multi Row",
        "Variant"
      ],
      "default": "Single Row"
    },
    "attrGroupType": {
      "type": "string",
      "required": true,
      "enum": [
        "Product Level",
        "Dynamic"
      ],
      "default": "Dynamic"
    },
    "createdAt": {
      "type": "date",
      "required": true
    },
    "lastModifiedAt": {
      "type": "date",
      "required": true
    },
    "createdBy": {
      "type": "number"
    },
    "lastModifiedBy": {
      "type": "number"
    }
  },

  "relations": {
    "attributes": {
      "type": "hasMany",
      "model": "PlmAttributes",
      "foreignKey": "attrGroupId"
    },
    "hierarchies": {
      "type": "hasMany",
      "model": "PlmHierarchyNodes",
      "foreignKey": "attrGroupId",
      "through": "PlmHierarchyAgAssoc"
    },
    "attrGroupHierarchies": {
      "type": "hasAndBelongsToMany",
      "model": "PlmHierarchyNodes"
    }
  },

  "validations": [],
  
  "acls": [],
  "methods": {}
}
